# ========================================
# MILAPP - Variáveis de Ambiente
# ========================================

# ========================================
# CONFIGURAÇÕES BÁSICAS
# ========================================
APP_NAME=MILAPP
APP_VERSION=2.0.0
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# ========================================
# DATABASE
# ========================================
DATABASE_URL=postgresql://milapp:milapp123@localhost:5432/milapp
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# ========================================
# REDIS
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# IA E MACHINE LEARNING
# ========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
LANGCHAIN_API_KEY=your-langchain-api-key

# ========================================
# AZURE INTEGRATION
# ========================================
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# ========================================
# NOTIFICAÇÕES
# ========================================
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-teams-webhook-url
WHATSAPP_API_KEY=your-whatsapp-business-api-key
EMAIL_SERVER=smtp.company.com
EMAIL_USERNAME=your-email@company.com
EMAIL_PASSWORD=your-email-password

# ========================================
# FERRAMENTAS EXTERNAS
# ========================================
N8N_BASE_URL=https://n8n.company.com
N8N_API_KEY=your-n8n-api-key
POWERBI_WORKSPACE_ID=your-powerbi-workspace-id
POWERBI_CLIENT_ID=your-powerbi-client-id
POWERBI_CLIENT_SECRET=your-powerbi-client-secret

# ========================================
# ARMAZENAMENTO DE ARQUIVOS
# ========================================
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER=milapp-files

# ========================================
# FRONTEND
# ========================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# ========================================
# CORS
# ========================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501", "http://localhost:80"]

# ========================================
# SEGURANÇA
# ========================================
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# UPLOAD
# ========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB em bytes

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
LOG_FILE=./logs/milapp.log

# ========================================
# MONITORAMENTO
# ========================================
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# ========================================
# DESENVOLVIMENTO
# ========================================
# Descomente para desenvolvimento local
# DATABASE_URL=postgresql://milapp:milapp123@localhost:5432/milapp
# REDIS_URL=redis://localhost:6379